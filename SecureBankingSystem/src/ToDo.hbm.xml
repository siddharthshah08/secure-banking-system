<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="softwareSecurity.ToDo" table="todo">
      <meta attribute="class-description">
         This class contains the internal users detail. 
      </meta>
      <id name="ID" type="int" column="ID">
         <generator class="assigned"/>
      </id>
      <property name="actioneer" type="string" column="actioneer"/>
      <property name="isDone" column="isDone" type="int"/>
      <property name="associatedUserName" column="associatedUserName" type="string"/>
      <property name="comments" column="comments" type="string"/>
      <property name="action" column="action" type="string"/>
   </class>
</hibernate-mapping>